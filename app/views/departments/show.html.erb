<h1><%= @department.name %></h1>
<hr />
<p>What would you like to do?</p>
<%= link_to 'View Department', department_path(@department) %>
<br />
<%= link_to 'Edit Department', edit_department_path(:id) %>
<br />
<%= link_to 'Delete Department', @department, method: :delete %>
<h1>Items</h1>
<%= link_to 'Ceate a item', new_department_item_path(@department) %>
<ul>
  <% @department.items.each do |item| %>
    <li><%= link_to item.name, [@department, item] %></li>
  <% end %>
</ul>

